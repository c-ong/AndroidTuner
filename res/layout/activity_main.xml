<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/e_button"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="E" />

    <Button
        android:id="@+id/a_button"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/e_button"
        android:layout_alignBottom="@+id/e_button"
        android:layout_toRightOf="@+id/e_button"
        android:text="A" />

    <Button
        android:id="@+id/g_button"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/e_button"
        android:layout_below="@+id/e_button"
        android:text="G" />

    <Button
        android:id="@+id/b_button"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/g_button"
        android:layout_alignBottom="@+id/g_button"
        android:layout_alignLeft="@+id/a_button"
        android:text="B" />

    <Button
        android:id="@+id/lowe_button"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b_button"
        android:layout_alignBottom="@+id/b_button"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/b_button"
        android:text="E" />

    <Button
        android:id="@+id/d_button"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lowe_button"
        android:layout_alignLeft="@+id/lowe_button"
        android:text="D" />

</RelativeLayout>